<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>To Do List</h1>
    <% if(data.length === 0) { %>
      <h3>There are no To Dos yet!</h3>
    <% } %>
    <ul>
      <% data.forEach(function(d){ %>
        <li>
          <%= d.todo %> - <%= d.done ? "Not Done" : "" %> 
          <form action="/<%= data.indexOf(d) %>?_method=DELETE" method="POST"><button type="submit">DELETE</button></form>
        </li>
      <% }) %>
    </ul>
      <hr>
    <form action="/" method="POST">
      <input type="text" name="todo" required autofocus>
      <button type="submit">Add To Do</button>
    </form>
  </body>
</html>
